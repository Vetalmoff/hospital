<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<% if flash[:alert] %>
  <aside class="notice">
    <%= flash[:alert] %>
  </aside>
<% end %>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Doctor name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.user.name %></td>
        <td><%= appointment.start_time %></td>
        <td><%= appointment.end_time %></td>
        <td><%= appointment.doctor.name %></td>
        <td><%= link_to 'Show', appointment, :class => 'btn btn-outline-secondary' %></td>
<!--        <td><%#= link_to 'Edit', edit_appointment_path(appointment), :class => 'btn btn-outline-secondary' %></td>-->
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path, :class => 'btn btn-outline-primary' %>
