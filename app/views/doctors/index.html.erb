<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<% if @doctors.length > 0 %>
  <table id='table'>
    <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.position %></td>
        <td><%= link_to 'Show', doctor, :class => 'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), :class => 'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h3>There are no any doctors yet.</h3>
<% end %>



<%= link_to 'New Doctor', new_doctor_path, :class => 'btn btn-outline-primary mt-3' %>

