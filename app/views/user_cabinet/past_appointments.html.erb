<h2>My past appointments</h2>


<table class="table">
  <thead>
  <tr>
    <th scope="col">Doctor name</th>
    <th scope="col">Date</th>
    <th scope="col">Start time</th>
    <th scope="col">End time</th>
  </tr>
  </thead>

  <tbody>
  <% @past_appointments.each do |appointment| %>
    <tr>
      <td><%= appointment.doctor.name %></td>
      <td><%= appointment.start_time.strftime('%F') %></td>
      <td><%= appointment.start_time.strftime('%H:%M') %></td>
      <td><%= appointment.end_time.strftime('%H:%M') %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', user_cabinet_index_path, :class => 'btn btn-outline-primary' %>

